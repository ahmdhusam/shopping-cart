<div class="row">
  {{# each products }}
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="{{ this.img_path }}" alt="{{ this.title }}" class="img-responsive" id="thunbnail">
            <div class="caption">
                <h3> {{ this.title }}</h3>
                <p class="description" id="description">{{ this.description }}</p>
                <div class="clearfix">
                    <div class="price pull-left">{{ this.price }}</div>
                    <a href="/cart/add-to-cart/{{ this.id }}" class="btn btn-success pull-right" role="button">Add in Cart</a>
                </div>
            </div>
        </div>
    </div>
  {{/each}}
</div>
